@using PMS.ViewModel;

@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>@ViewData["Title"]</h2>

<!-- 2 column grid layout with text inputs for the first and last names -->
<!-- Default input -->
<!--<label for="exampleForm2">Default input</label>
<input type="text" id="exampleForm2" class="form-control">-->




<section class="vh-100" style="background-color: #9A616D;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/img1.jpg"
                                 alt="login form"
                                 class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                    <span class="h1 fw-bold mb-0">PMS</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h5>
                                <form method="post">
                                    <div class="form-outline mb-4">
                                        <input asp-for="@Model.Email" class="form-control" />
                                        <label class="form-label" asp-for="@Model.Email"></label>
                                        <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                    </div>

                                    <div class="row mb-4">
                                        <div class="col">
                                            <div class="form-outline">
                                                <input asp-for="@Model.FirstName" class="form-control" />
                                                <label class="form-label" asp-for="@Model.FirstName"></label>
                                                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-outline">
                                                <input asp-for="@Model.LastName" class="form-control" />
                                                <label class="form-label" asp-for="@Model.LastName"></label>
                                                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="@Model.Password" class="form-control" />
                                        <label class="form-label" asp-for="@Model.Password"></label>
                                        <span asp-validation-for="@Model.Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input asp-for="@Model.ConfirmPassword" class="form-control" />
                                        <label class="form-label" asp-for="@Model.ConfirmPassword"></label>
                                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <button type="submit" class="btn btn-primary btn-block mb-4">Register</button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
