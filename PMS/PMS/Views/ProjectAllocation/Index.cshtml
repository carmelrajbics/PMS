@model ProjectAllocationViewModel

<div>
    <h4 style="text-align: center; color: #a6c !important">Project Allocation</h4>
</div>

<div>
    <form method="post">
        <button type="submit" style="width:100%" class="btn btn-secondary" asp-action="AllocateProject" asp-controller="ProjectAllocation">
            Allocate Prject to the Candicate
        </button>
    </form>
    @if (Model.ProjectAllocation != null)
    {
        <table id="tblproject" class="table table-striped table-bordered dt-responsive nowrap table-hover" style="width:99.9% !important;">
            <thead>
                <tr>
                    <th>Candiate Name </th>
                    <th>ProjectName</th>
                    <th>MentorName </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.ProjectAllocation)
                {
                    <tr>
                        <td>@item.CandidateName</td>
                        <td>@item.ProjectName</td>
                        <td>@item.MentorName</td>

                    </tr>
                }
            </tbody>

        </table>
    }
    else if (ViewBag.ProjectCountLessThanCandidate != null)
    {
        <h1 style="text-align: center;margin-top:8%; color: red !important">@ViewBag.ProjectCountLessThanCandidate</h1>
    }


</div>